<Window x:Class="WpfPxl.DataOverzicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPxl"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="DataOverzicht" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="0">
            <Label>Studenten</Label>
        <DataGrid x:Name="DgdStudenten" Height="250"></DataGrid>
            <Label>Vakken</Label>
            <DataGrid x:Name="dgdVakken" Height="100"></DataGrid>

        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10">
            <Button Width="150" Height="25" Margin="100 30 0 0" Click="Button_Click">Programmeren</Button>
            <Button Width="150" Height="25" Margin="100 30 0 0" Click="Button_Click_1">Naam</Button>
            <Button Width="150" Height="25" Margin="100 30 0 0" Click="Button_Click_2">Reset</Button>
            <TextBox x:Name="TxtResultaat" Margin="100 80 20 0" Height="100"></TextBox>
        </StackPanel>
       
    </Grid>
</Window>
